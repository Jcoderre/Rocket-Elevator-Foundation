			<div class="container">
				<%=form_with(scope: "Intervention")  do |f|  %>
				
					<%= f.select(:customer_id, Customer.all.collect {|c| [c.company_name, c.id]},  {prompt: "Select"}, {class: 'form-control'}) %>
					<%= f.select(:building_id, Building.all.collect {|b| [b.id, b.id]}, {}, {class: 'form-control'}) %>
					
					<%= f.label :building, :class => "col-sm5 control-label" %>
					<select class="form-control" name="hour[customer_id]" id="form_customer_id">
						<option value="">None</option>
						<option value="1">Real Estate</option>
						<option value="2">Time Sheet App</option>
					</select>

					<%= f.label :batteries, :class => "col-sm5 control-label" %>		
					<select class="form-control" name="hour[building_id]" id="form_building_id", disabled="" >						
						<option value="3">None</option>
						<option value="4">Design</option>
						<option value="6">Backend</option>
					</select>
					
					<%= f.label :columns, :class => "col-sm5 control-label" %>	
					<select class="form-control" name="hour[building_id]" id="form_building_id", disabled="" >
						<option value="3">None</option>
						<option value="4">Design</option>
						<option value="6">Backend</option>
					</select>

					<%= f.label :elevators, :class => "col-sm5 control-label" %>		
					<select class="form-control" name="hour[building_id]" id="form_building_id", disabled="" >						
						<option value="3">None</option>
						<option value="4">Design</option>
						<option value="6">Backend</option>
					</select>

					<%= f.label :employee, :class => "col-sm5 control-label" %>	
					<select class="form-control" name="hour[building_id]" id="form_building_id", disabled="" >						
						<option value="3">None</option>
						<option value="4">Design</option>
						<option value="6">Backend</option>
					</select>

					<div class = "col-sm-10">
						<%= text_area_tag(:description, "Nature of the intervention: ", size: "100x10")%>
					</div>

					<%= f.submit %>	

				<% end %>
	
